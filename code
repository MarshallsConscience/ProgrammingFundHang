def choose_secret_word():
    wordPlaying = []
    wordsInFile = load_words(fileName)
    wordsPresent = len(wordsInFile)
    x =  wordsInFile[random.randint(0,wordsPresent)]
    wordPlaying.append(x)
    return wordPlaying
  
  
print(choose_secret_word())
