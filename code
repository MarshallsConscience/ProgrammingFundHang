import random #import random function, to enable program to pick random index from list of words
#TASK 2


def load_words(fileName): #working fine
    
    try:
        with open(fileName, 'r') as wordFile: # store wordFile as temporary variable using 'with' keyword, used built in function 'open' to open the text as readable 'r'
            myWords = [line.strip() for line in wordFile] #set the value of each line in the text file, stripped of all whitespace and set to variable 'myWords'
            wordsPresent = len(myWords)
            message = "There are " + str(wordsPresent) + " words in the file"
            wordFile.close()
        return(message + "\n\n" + str(myWords))
        return str(myWords)
    except FileNotFoundError:
        print("This file does not exist!")

